<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/orders.css" />
  </head>
  <body>
    <%- include('../includes/navigation')%>
    <main class="order-container">
      <h2 class="header-text">My Orders</h2>
      <%if(orders.length>0){%>
      <!-- <h3><%=orders.length%></h3> -->
      <!-- <div class="orders"> -->
      <%orders.forEach(order=>{%>
      <div class="order-card">
        <ul>
          <%order.products.forEach(product=>{%>
          <li class="order-list">
            <div class="order-content">
              <img src="/<%=product.product.imageUrl%>" />
              <div>
                <h5><%=product.product.title%> (<%=product.quantity%>)</h5>
                <p>Rs: <%=product.product.price%></p>
              </div>
            </div>
          </li>
          <%})%>
        </ul>
        <div>
          <a class="btn" target="_blank" href="/invoice/<%=order._id%>">Invoice</a>
        </div>
      </div>
      <%})%>
      <!-- </div> -->
      <%}else{%>
      <h1 class="page-not-found">No item in orders</h1>
      <%}%>
      <!-- </div> -->
    </main>
  </body>
</html>
